<section class="sign-in">
  <div class="container">
    <div class="signin-content">
      <div class="signin-image">
        <figure><img src="/images/reset.jpg" alt="sing up image"></figure>
        <a href="/signin" class="signup-image-link">Sign In</a>
      </div>

      <div class="signin-form">
        <h2 class="form-title">
          <%= locals.title %>
        </h2>
        <form method="POST" class="register-form" id="login-form">
          <div class="form-group">
            <label for="password"><i class="zmdi zmdi-lock"></i></label>
            <input type="password" name="Password" id="your_name" placeholder="Enter Password" />
          </div>
          <div class="form-group">
            <label for="Repeat-Password"><i class="zmdi zmdi-lock-outline"></i></label>
            <input type="Repeat-Password" name="Repeat-Password" id="your_pass" placeholder=" Repeat Password" />
          </div>

          <div class="form-group form-button">
            <input type="submit" name="reset" id="reset" class="form-submit" value="Reset" />
          </div>
        </form>

      </div>
    </div>
  </div>
</section>